<div class="auth-container">
  <div class="auth-form-card">
    <h2 class="auth-title">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-field">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>
      <div class="form-field">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-field-checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="form-actions">
        <%= f.submit "Log in", class: "button button-primary button-full-width" %>
      </div>
    <% end %>
    <div class="auth-shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>