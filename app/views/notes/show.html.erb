<% content_for :title, @note.title %>
<div class="notes-container">
  <%# Use the consistent flash message style from before %>
  <% if notice %>
    <p class="flash-notice"><%= notice %></p>
  <% end %>
  <header class="page-actions-header">
    <%= link_to "← Back to all notes", notes_path, class: "button-link" %>
    <%= link_to "Edit this note", edit_note_path(@note), class: "button button-secondary" %>
  </header>
  <%# Render the note partial we just created %>
  <%= render @note %>
  <footer class="page-actions-footer">
    <p>Danger Zone</p>
    <%# A styled button with a confirmation dialog for safety %>
    <%= button_to "Destroy this note", @note, method: :delete, class: "button button-danger", data: { turbo_confirm: "Are you sure you want to permanently delete this note?" } %>
  </footer>
</div>